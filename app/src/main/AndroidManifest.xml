<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="wiki.lostark.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".LostarkWikiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.activities.MainActivity"
            android:theme="@style/ThemeMococo"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.QueueActivity" />
        <activity
            android:name=".ui.activities.MapActivity"
            android:theme="@style/ThemeMococo" />
        <activity android:name=".ui.activities.CharacterProfileActivity"></activity>
        <activity
            android:name=".ui.activities.DictionaryActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".ui.activities.ItemDetailActivity" />
        <activity android:name=".ui.activities.EventActivity"></activity>
    </application>

</manifest>